{
    "name": "yiranzai/tools",
    "type": "library",
    "description": "php tools",
    "keywords": [
        "yiranzai",
        "tools"
    ],
    "homepage": "https://github.com/yiranzai/php-tools",
    "license": "MIT",
    "authors": [
        {
            "name": "yiranzai",
            "email": "wuqingdzx@gmail.com",
            "homepage": "https://blog.yiranzai.cn",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-bcmath": "*",
        "ext-fileinfo": "*",
        "guzzlehttp/guzzle": "^6.0",
        "nesbot/carbon": "^1.26.0",
        "symfony/filesystem": "^4.0",
        "yiranzai/snowflake": "~0.1",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Yiranzai\\Tools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiranzai\\Tools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@fix-style",
            "phpunit"
        ],
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
